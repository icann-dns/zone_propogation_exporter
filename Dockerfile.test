# Dockerfile for testing with systemd dependencies
FROM python:3.12-slim

# Install systemd development libraries
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    libsystemd-dev \
    pkg-config \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Sync dependencies
RUN uv sync --extra dev

# Default command runs tests
CMD ["uv", "run", "pytest", "-v", "--cov=propogation_exporter", "--cov-report=term-missing"]
